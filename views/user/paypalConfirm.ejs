<%- include('../layouts/userHeader.ejs') %>
<div class="custom-order-modal-dialog animated zoomInDown custom-order-modal-dialog-centered" role="document">
    <div class="custom-order-modal-content">
      <!-- Modal Content -->
      <div class="container-fluid">
        <div class="row py-5">
          <div class="col-md-12 m-h-20 bg-img rounded-left text-center">
            <img style="max-width: 20%;" src="https://lirp.cdn-website.com/bbca9e7c/dms3rep/multi/opt/green-tick-icon-0-1000x1000-640w.png" alt="">
          </div>
          <div class="col-md-12 text-center pt-4 px-sm-5 ">
            <h2>Order Placed Successfully</h2>
            <p class="text-muted"></p>
            <a href="/"><button class="btn btn-warning w-50">Continue Shopping</button></a>
          </div>
        </div>
      </div>
      <!-- End of Modal Content -->
    </div>
  </div>

  <section class="custom-confirmation_part section_padding">
    <div class="container">
      <div class="row">
        <div class="col-lg-12">
          <!-- Confirmation Details -->
        </div>
        <div class="col-lg-12">
          <div class="custom-single_confirmation_details">
            <ul class="paypal_address">
              <li><h2>Your Paypal Payment was: <%= payment.state %></h2></li>
              <li><h2>Payment Id: <%= payment.id %></h2></li>
              <li><h2>Payment Method: Paypal</h2></li>
            </ul>
          </div>
        </div>
      </div>
    </div>
  </section>

<%- include('../layouts/userFooter.ejs') %>